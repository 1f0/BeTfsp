<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Button
        android:id="@+id/JoinDialogQRCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Scan QRCode" />
    
    <Button
        android:id="@+id/JoinDialogRFID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Read RFID Tag" />

    <Button
        android:id="@+id/JoinDialogOnline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Search online game" />
    
    <Button
        android:id="@+id/JoinDialogDiscovery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Discover in-range games" />

</LinearLayout>