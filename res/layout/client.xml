    </LinearLayout>

    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
     >

     <ImageView
         android:id="@+id/whitechip"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_weight="1"
         android:paddingLeft="2dip"
         android:paddingRight="2dip"
         android:scaleType="fitCenter"
         android:src="@drawable/chips_white" />
        
     <ImageView
         android:id="@+id/redchip"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_weight="1"
         android:paddingLeft="2dip"
         android:paddingRight="2dip"
         android:scaleType="fitCenter"
         android:src="@drawable/chips_red" />
            
     <ImageView
         android:id="@+id/greenchip"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_weight="1"
         android:paddingLeft="2dip"
         android:paddingRight="2dip"
         android:scaleType="fitCenter"
         android:src="@drawable/chips_green" />
            
     <ImageView
         android:id="@+id/bluechip"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_weight="1"
         android:paddingLeft="2dip"
         android:paddingRight="2dip"
         android:scaleType="fitCenter"
         android:src="@drawable/chips_blue" />
     
     <ImageView
         android:id="@+id/blackchip"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_weight="1"
         android:paddingLeft="2dip"
         android:paddingRight="2dip"
         android:scaleType="fitCenter"
         android:src="@drawable/chips_black" />
     
    </LinearLayout>
    

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/labelCurrentBet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.09"
            android:freezesText="true"
            android:paddingLeft="5dip"
            android:text="Current bet:"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/currentBet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.93"
            android:freezesText="false"
            android:inputType="number"
            android:lines="1"
            android:maxLines="1"
            android:text="TextView"
            android:textColor="@android:color/black"
            android:typeface="normal" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

        <Button
            android:id="@+id/Bet"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Bet" />

        <Button
            android:id="@+id/Check"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Check" />

        <Button
            android:id="@+id/Fold"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Fold" />

    </LinearLayout>

</LinearLayout>